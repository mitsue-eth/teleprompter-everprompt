generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  // Subscription fields
  plan                 String    @default("free") // "free" | "pro"
  planExpiresAt        DateTime?
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  // Relations
  accounts       Account[]
  sessions       Session[]
  scripts        Script[]
  projects       Project[]
  tags           Tag[]
  preferences    UserPreferences?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

// Teleprompter Script model
model Script {
  id             String   @id @default(cuid())
  name           String
  content        String   @db.Text
  status         String   @default("draft")
  characterCount Int      @default(0) // Track for free tier limits
  userId         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Script Views (user-curated alternative content)
  bulletContent String? @db.Text
  cueContent    String? @db.Text

  // Script Variants
  parentScriptId String?
  parentScript   Script?  @relation("ScriptVariants", fields: [parentScriptId], references: [id], onDelete: SetNull)
  variants       Script[] @relation("ScriptVariants")
  variantType    String? // e.g., "short", "intro", "outro", "custom"

  // Lifecycle Tracking
  lastRecordedAt  DateTime?
  lastRehearsedAt DateTime?
  rehearsalCount  Int      @default(0)

  // Organization
  isPinned    Boolean @default(false)
  displayOrder Int?

  // Relations
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  sections     ScriptSection[]
  projectLinks ProjectScript[]
  tagLinks     ScriptTag[]

  @@index([userId])
  @@index([parentScriptId])
}

model ScriptSection {
  id          String   @id @default(cuid())
  scriptId    String
  script      Script   @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  title       String
  order       Int
  startOffset Int?
  endOffset   Int?

  isCompleted Boolean  @default(false)
  notes       String?  @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([scriptId])
  @@unique([scriptId, order])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  color       String?
  icon        String?

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  scriptLinks ProjectScript[]

  isArchived Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
}

model ProjectScript {
  id        String   @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  scriptId  String
  script    Script  @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  order Int?

  createdAt DateTime @default(now())

  @@unique([projectId, scriptId])
  @@index([projectId])
  @@index([scriptId])
}

model Tag {
  id       String   @id @default(cuid())
  name     String
  color    String?

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  scriptLinks ScriptTag[]

  createdAt DateTime @default(now())

  @@unique([userId, name])
  @@index([userId])
}

model ScriptTag {
  id       String   @id @default(cuid())
  tagId    String
  tag      Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  scriptId String
  script   Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([tagId, scriptId])
  @@index([tagId])
  @@index([scriptId])
}

model UserPreferences {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  lastExportedAt     DateTime?
  exportReminderDays Int      @default(30)
  showExportReminder Boolean  @default(true)

  defaultScriptView String @default("full") // full | bullet | cue
  defaultStorage    String @default("cloud") // local | cloud

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
